html
	head
		title= 'Web Student'
		link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', rel='stylesheet')
		link(href='https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css', rel='stylesheet')
	body
		main.container.mt-5
			h1= title
			.card.card-body
				form(name="student_form" action="/insert_student" method="POST")
					.row.form-group
						label.col-2(for="Student ID") Student ID
						input#id.col-9.pl-0.pr-0(type="text", name="id", value=sid) 
					.row.form-group
						label.col-2(for="Name") Name
						input#name.col-9.pl-0.pr-0(type="text", name="name", value=sname)
					.row.form-group
						label.col-2(for="Address") Address
						textarea#address.col-9.form-control.pl-2.pr-2(name="address", rows="2", value=saddress)
					.row.form-group
						label.col-2(for="Gender") Gender
						.form-radio
							.radio
								label
									input(type="radio" name="radio" value="M" checked)
									i.helper
									| Male
							.radio
								label
									input(type="radio" name="radio" value="F")
									i.helper
									| Female
					.row.form-group
						label.col-2(for="Date of Birth") Date of Birth
						input#dob.col-9.pl-0.pr-0(type="text", name="dob", value=sdob)
					input.btn.btn-primary(type="submit" value="Submit")
		script(src='https://code.jquery.com/jquery-1.12.4.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js')
		script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js')
		script(src='https://code.jquery.com/ui/1.12.1/jquery-ui.js')
		script.
			$(function() {
				$("#dob").datepicker({minDate: "-25Y", maxDate: "-15Y"});
			});